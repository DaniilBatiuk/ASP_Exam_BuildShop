@using ASP_Meeting_18.Data;
@using ASP_Meeting_18.Models.DTO;
@model ProductDTO

<div class="card m-2 card_border" style="width: 18rem;">
    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Images!.First().Image!))" alt="@Model.Title">
    <div class="card-body">
        <h5 class="card-title" style="display:block; height:50px;">@Model.Title</h5>
        <p class="card-text">@Model.Price.ToString("0.00 EUR")</p>
        
        <div class="btn-group" role="group" aria-label="Basic mixed styles example" style="display: flex; align-items:center; margin-bottom:10px;">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">Details</a>
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
